@model coderush.Areas.TTNhom_QLKS.EF.NhanVien

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Form PHIẾU CHI
            <small>Preview</small>
        </h1>
        <ol class="breadcrumb">
            <li class="@Html.IsSelected(controller: "Home", action: "Index")"><a href="@lte.MVC.Pages.QLKS.Home"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Chi tiết phiếu chi</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Chỉnh sửa</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal box-body">                            
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.maNV)

                            <div class="form-group">
                                @Html.LabelFor(model => model.tenNV, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-font"></i>
                                        </div>
                                        <input name="tenNV" id="tenNV" type="text" class="form-control" value="@Model.tenNV">

                                    </div>
                                </div>
                                @Html.ValidationMessageFor(model => model.tenNV, "", new { @class = "text-danger" })
                             </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ca, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">                                   
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <textarea name="ca" class="form-control" rows="3" placeholder="Enter ...">@Model.ca</textarea>

                                        @Html.ValidationMessageFor(model => model.ca, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.luong, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-money"></i>
                                        </div>
                                        <input name="luong" id="luong" type="number" class="form-control" step="10000" value="@Model.luong">
                                        <span class="input-group-addon">.00</span>                                        
                                    </div>                                    
                                    @Html.ValidationMessageFor(model => model.luong, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.taikhoan, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-user-circle"></i>
                                        </div>
                                        <input name="taikhoan" id="taikhoan" type="text" class="form-control" value="@Model.taikhoan">
                                    </div>
                                    @Html.ValidationMessageFor(model => model.taikhoan, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.matkhau, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-key"></i>
                                        </div>
                                        <input name="matkhau" id="matkhau" type="password" class="form-control" value="@Model.matkhau">
                                    </div>
                                    @Html.ValidationMessageFor(model => model.matkhau, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.dangnhapgannhat, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-clock-o"></i>
                                        </div>
                                        <input name="dangnhapgannhat" type="datetime" class="form-control pull-right" id="datepicker" value="@Model.dangnhapgannhat">
                                    </div>
                                    @Html.ValidationMessageFor(model => model.dangnhapgannhat, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10 box-footer">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </div>
                        </div>


                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                    }
                </div>
                    
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

