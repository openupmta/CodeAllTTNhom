@model IEnumerable<coderush.Areas.TTNhom_QLKS.EF.Phong>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Phòng
            <small>advanced tables</small>
        </h1>
        <ol class="breadcrumb">
            <li class="@Html.IsSelected(controller: "Home", action: "Index")"><a href="@lte.MVC.Pages.QLKS.Home"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dịch vụ tables</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <!-- /.box -->
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">@Html.ActionLink("Phòng mới", "Create")</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        @*<div class="table table-bordered table-striped">*@
                        @*<table id="example1" class="table table-bordered table-striped">*@

                        @foreach (var item in Model)
                        {
                            <div class="box box-success" id="row_@item.maphong">
                                <div class="box-header with-border dl-horizontal">
                                    <tr id="row_@item.maphong">
                                        <div class="box-footer btn btn-primary">
                                            <p>
                                                Phòng:
                                                @Html.DisplayFor(modelItem => item.sophong)
                                            </p>
                                        </div>
                                        <div class="pull-right">
                                            @Html.ActionLink("Edit", "Edit", new { id = item.maphong }) |
                                            @Ajax.ActionLink("Delete","Delete", new { @id = item.maphong }, new AjaxOptions
                                     {   Confirm =" Bạn có muốn xóa bản ghi này?",
                                         OnComplete = "$('#row_"+ @item.maphong + "').remove()",
                                         HttpMethod = "Delete"
                                     })
                                        </div>
                                        <div class="box-body" >
                                            <dt>
                                                @Html.DisplayNameFor(model => model.LoaiPhong.tenLP)
                                            </dt>
                                            <dd>
                                                @Html.DisplayFor(modelItem => item.LoaiPhong.tenLP)
                                            </dd>
                                            <dt>
                                                @Html.DisplayNameFor(model => model.TrangThaiPhong.tenTTP)
                                            </dt>
                                            <dd>
                                                @Html.DisplayFor(modelItem => item.TrangThaiPhong.tenTTP)
                                            </dd>
                                            <dt>
                                                @Html.DisplayNameFor(model => model.songuoi)
                                            </dt>
                                            <dd>
                                                @Html.DisplayFor(modelItem => item.songuoi)
                                            </dd>
                                            <dt>
                                                @Html.DisplayNameFor(model => model.lau)
                                            </dt>
                                            <dd>
                                                @Html.DisplayFor(modelItem => item.lau)
                                            </dd>

                                        </div>

                                    </tr>
                                </div>
                                @Html.Action("IndexDetail", new { id = item.maphong })
                                <br />
                            </div>
                        }
                        @*</table>*@
                        @*</div>*@
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


