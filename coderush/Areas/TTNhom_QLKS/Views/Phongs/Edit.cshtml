    <!-- Bootstrap Color Picker -->
    <link rel="stylesheet" href="~/Content/adminlte/components/bootstrap-colorpicker/dist/css/bootstrap-colorpicker.min.css">
    <!-- Bootstrap time Picker -->
    <link rel="stylesheet" href="~/Content/adminlte/plugins/timepicker/bootstrap-timepicker.min.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="~/Content/adminlte/components/select2/dist/css/select2.min.css">
