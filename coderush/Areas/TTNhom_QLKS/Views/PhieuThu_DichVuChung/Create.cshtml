@model coderush.Areas.TTNhom_QLKS.EF.PhieuThu_DichVuChung

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Thêm dịch vụ chung
            <small>Preview</small>
        </h1>
        <ol class="breadcrumb">
            <li class="@Html.IsSelected(controller: "Home", action: "Index")"><a href="@lte.MVC.Pages.QLKS.Home"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dịch vụ chung</li>
            <li class="active">Thêm dịch vụ chung</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-default">
                        <!-- /.box-header -->
                        <div class="box-body">
                            <div class="callout callout-info bg-light-blue-active color-palette">
                                <dl class="dl-horizontal box-body">
                                    <dt>
                                        Khách hàng:
                                    </dt>
                                    <dd>
                                        @ViewBag.PhieuThu.KhachHang.tenKH
                                    </dd>
                                    <dt>
                                        Dịch vụ:
                                    </dt>
                                    <dd>
                                        @ViewBag.PhieuThu.Phong.sophong
                                    </dd>
                                    <dt>
                                        Dịch vụ:
                                    </dt>
                                    <dd>
                                        @ViewBag.PhieuThu.DichVu.tenDV
                                    </dd>
                                    <dt>
                                        Thời gian vào:
                                    </dt>
                                    <dd>
                                        @ViewBag.PhieuThu.thoigianvao
                                    </dd>
                                    <dt>
                                        Thời gian ra:
                                    </dt>
                                    <dd>
                                        @ViewBag.PhieuThu.thoigianra
                                    </dd>
                                    <dt>
                                        Khuyến mãi:
                                    </dt>
                                    <dd>
                                        @ViewBag.PhieuThu.khuyenmai
                                    </dd>
                                    <dt>
                                        Trả trước:
                                    </dt>
                                    <dd>
                                        @ViewBag.PhieuThu.tratruoc
                                    </dd>
                                    <dt>
                                        Tổng tiền:
                                    </dt>
                                    <dd>
                                        @ViewBag.PhieuThu.tongtien
                                    </dd>
                                    <dt>
                                        Ngày tạo:
                                    </dt>
                                    <dd>
                                        @ViewBag.PhieuThu.ngaytao
                                    </dd>
                                    <dt>
                                        Nhân viên lập đơn:
                                    </dt>
                                    <dd>
                                        @ViewBag.PhieuThu.NhanVien.tenNV
                                    </dd>

                                </dl>

                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal box-body">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.maPT, "Mã phiếu thu", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-6">
                                        <input name="maPT" id="maPT" type="text" class="form-control" disabled="disabled" value="@ViewBag.PhieuThu.maPT">
                                        @Html.ValidationMessageFor(model => model.maPT, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.maDVC, "Dịch vụ chung", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.DropDownList("maDVC", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.maDVC, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.soluong, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    <input name="soluong" id="soluong" type="number" class="form-control" step="1">
                                    @Html.ValidationMessageFor(model => model.soluong, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.hethan, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    <input name="hethan" type="datetime" class="form-control pull-right" id="datepicker">
                                    @Html.ValidationMessageFor(model => model.hethan, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.tongtienDVC, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <input name="tongtienDVC" id="tongtienDVC" type="number" class="form-control" step="1000">
                                        <span class="input-group-addon">.00</span>
                                        @Html.ValidationMessageFor(model => model.tongtienDVC, "", new { @class = "text-danger" })
                                    </div>
                                    
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>
                            <div>
                                @Html.ActionLink("Trở lại phiếu thu", "Edit", "PhieuThus", new { @id = @ViewBag.PhieuThu.maPT }, null)
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Styles{
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Content/adminlte/components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/adminlte/components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Content/adminlte/components/Ionicons/css/ionicons.min.css">
    <!-- daterange picker -->
    <link rel="stylesheet" href="~/Content/adminlte/components/bootstrap-daterangepicker/daterangepicker.css">
    <!-- bootstrap datepicker -->
    <link rel="stylesheet" href="~/Content/adminlte/components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">
