@model IEnumerable<coderush.Areas.TTNhom_QLKS.EF.PhieuChi>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
    var stt = 0;
   }

<div class="content-wrapper">
    <!-- Content Header (Page header) -->

    <section class="content-header">
        <h1>
            Phiếu chi
            <small>dữ liệu</small>
        </h1>
        <ol class="breadcrumb">
            <li class="@Html.IsSelected(controller: "Home", action: "Index")"><a href="@lte.MVC.Pages.QLKS.Home"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Phiếu chi tables</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-pull-7">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"> @Html.ActionLink("Create New", "Create")</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        STT
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MucChi.mucchi1)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NhanVien.tenNV)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.diengiai)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.tongtien)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ngaytao)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                <tr id="row_@item.maPC">
                                    <td>
                                        @{stt += 1; }
                                        @stt
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MucChi.mucchi1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NhanVien.tenNV)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.diengiai)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tongtien)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ngaytao)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.maPC }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.maPC }) |
                                        @Ajax.ActionLink("Delete","Delete", new { @id = item.maPC }, new AjaxOptions
                                   {   Confirm =" Bạn có muốn xóa bản ghi này?",
                                       OnComplete = "$('#row_"+ @item.maPC + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                                }
                            </tbody>                            
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
