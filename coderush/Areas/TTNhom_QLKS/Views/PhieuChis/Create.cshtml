                        <div class="form-group">
                            @Html.LabelFor(model => model.maMucChi, "Mục chỉ", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-sticky-note"></i>
                                    </div>
                                    @Html.DropDownList("maMucChi", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.maMucChi, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.maNV, "Nhân viên", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
