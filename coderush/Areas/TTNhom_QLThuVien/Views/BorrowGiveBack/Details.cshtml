@model coderush.Areas.TTNhom_QLThuVien.Models.MuonTraSach

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

@{
    ViewBag.maMuonTra = Model.MaMuonTra;
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <b>
                QUẢN LÝ THƯ VIỆN
                <small>Học viện Kỹ thuật Quân sự</small>
            </b>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <i class="fa fa-hand-o-right"></i>
                        <h3 class="box-title">QUẢN LÝ MƯỢN-TRẢ&nbsp;&nbsp;</h3>
                        <i class="fa fa-angle-double-right"></i>
                        <h3 class="box-title">Thông tin Mượn-Trả</h3>
                        <div style="float:right">
                            <button type="button" class="btn btn-success">
                                <i class="fa fa-print"></i> &nbsp;
                                @Html.ActionLink("Xuất phiếu", "ExportToExcel", new { id = Model.MaMuonTra })
                            </button>
                            <button type="button" class="btn btn-warning">
                                <a class="fa fa-edit"></a> &nbsp;
                                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaMuonTra })
                            </button>
                            <button type="button" class="btn btn-warning" style="margin-right: auto">
                                <a class="fa fa-th-list"></a> &nbsp;
                                @Html.ActionLink("Danh sách", "Index")
                            </button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <dl class="dl-horizontal">
                            <dt>
                                Mã mượn trả:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.MaMuonTra)
                            </dd>

                            <dt>
                                Mã số thẻ:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.MaSoThe)
                            </dd>

                            <dt>
                                Mã sách:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.MaSach)
                            </dd>

                            <dt>
                                Tên sách
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Sach.TenSach)
                            </dd>

                            <dt>
                                Ngày mượn sách:
                            </dt>

                            <dd>
                                @Html.Raw(Model.NgayMuonSach.Value.ToShortDateString())
                            </dd>

                            <dt>
                                Hạn trả sách:
                            </dt>

                            <dd>
                                @Html.Raw(Model.HanTraSach.Value.ToShortDateString())
                            </dd>

                            <dt>
                                Tình trạng khi mượn
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.TinhTrangKhiMuon)
                            </dd>

                            <dt>
                                Đã trả:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.DaTra)
                            </dd>

                            <dt>
                                Ngày trả sách:
                            </dt>

                            <dd>
                                @try
                                {
                                    @Html.Raw(Model.NgayTraSach.Value.ToShortDateString())
                                }
                                catch
                                {
                                    @Html.Raw("Chưa trả")
                                }
                            </dd>

                            <dt>
                                Tình trạng khi trả:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.TinhTrangKhiTra)
                            </dd>

                            <dt>
                                Ghi chú:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.GhiChu)
                            </dd>
                        </dl>
                    </div>

                    <!-- /.box-body -->

                </div>
                <!-- /.box -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
