@model coderush.Areas.TTNhom_QLNS.Models.staff

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Sửa nhân sự
            <small>Nhân sự</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Quản lý nhân sự</a></li>
            <li><a href="#">Nhân sự</a></li>
            <li class="active"><a href="@lte.MVC.Pages.Department.Update">Cập nhập</a></li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Sửa nhân sự</h3>
                        <button type="button" class="btn btn-warning" style="float:right">
                            @Html.ActionLink("Danh sách", "Index")
                        </button>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="box-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.sta_id)
                            <div class="form-group">
                                @Html.LabelFor(model => model.sta_status, htmlAttributes: new { @class = "control-label col-md-2" })
                                @if (Model.sta_status == 1)
                                {
                                    <label class="radio-inline">
                                        <input name="sta_status" value="1" checked="" type="radio">Hoạt động
                                    </label>
                                    <label class="radio-inline">
                                        <input name="sta_status" value="0" type="radio">Khóa
                                    </label>
                                }
                                else
                                {
                                    <label class="radio-inline">

                                        <input name="sta_status" value="1" type="radio">Hoạt động
                                    </label>
                                    <label class="radio-inline">
                                        <input name="sta_status" value="0" checked="" type="radio">Khóa
                                    </label>
                                }
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Họ và tên (*)</label>

                                @Html.EditorFor(model => model.sta_fullname, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sta_fullname, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">UserName (*)</label>
                                @Html.EditorFor(model => model.sta_username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sta_username, "", new { @class = "text-danger" })
                                @Html.Hidden("sta_id", Model.sta_id)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Password (*)</label>

                                @Html.PasswordFor(model => model.sta_password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sta_password, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Giới tính </label>

                                @Html.DropDownListFor(model => model.sta_sex, new List<SelectListItem> {
                                    new SelectListItem{Value="1", Text="Nam"},
                                    new SelectListItem{Value="2", Text="Nữ"},
                                   }, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sta_sex, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Ngày sinh </label>

                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" name="sta_birthday" id="sta_birthday" value="@Convert.ToDateTime(Model.sta_birthday).ToString("MM/dd/yyyy")">
                                </div>
                                @Html.ValidationMessageFor(model => model.sta_birthday, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email </label>

                                @Html.EditorFor(model => model.sta_email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sta_email, "", new { @class = "text-danger" })
                                @Html.Hidden("sta_id", Model.sta_id)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Giới thiệu bản thân </label>

                                @Html.EditorFor(model => model.sta_aboutme, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sta_aboutme, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Số điện thoại </label>

                                @Html.EditorFor(model => model.sta_mobile, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sta_mobile, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Số CMT </label>

                                @Html.EditorFor(model => model.sta_identity_card, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sta_identity_card, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail1">Ngày cấp CMT </label>

                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" name="sta_identity_card_date" id="sta_identity_card_date" value="@Convert.ToDateTime(Model.sta_identity_card_date).ToString("MM/dd/yyyy")">
                                </div>
                                @Html.ValidationMessageFor(model => model.sta_identity_card_date, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Thuộc phòng </label>

                                @Html.DropDownList("department_id", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.department_id, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail1">Chức vụ </label>

                                @Html.DropDownList("position_id", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.position_id, "", new { @class = "text-danger" })

                            </div>


                            <div class="form-group">
                                <label for="exampleInputEmail1">Nhóm quyền </label>

                                @Html.DropDownList("group_role_id", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.group_role_id, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Tỉnh/Thành Phố</label>

                                @Html.DropDownList("provinceID", null, htmlAttributes: new { @class = "form-control", @id = "ddlProvince" })


                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Quận/Huyện</label>

                                @Html.DropDownList("districtID", null, htmlAttributes: new { @class = "form-control", @id = "ddlDistrict" })


                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Xã/Phường</label>

                                @Html.DropDownList("wardID", null, htmlAttributes: new { @class = "form-control", @id = "ddlWard" })


                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }


                </div>

            </div>
            <!--/.col -->

        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->



