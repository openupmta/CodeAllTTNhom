@model IEnumerable<coderush.Areas.TTNhom_QLTTHPT.Models.HOCSINH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}


<style>
    .row-button {
        display: flex;
        margin-top: 7px;
        justify-content: flex-end;
        position: absolute;
        right: 5px;
    }

    #export {
        margin-right: 10px;
    }

        #export i {
            margin-right: 4px;
        }
</style>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Danh Sách Học Sinh
        </h1>
        <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> home</a></li>
                <li><a href="#">tables</a></li>
                <li class="active">data tables</li>
            </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        @*<h3 class="box-title">Danh sách nhóm quyền</h3>*@
                        <div class="row-button col-xs-4">

                             <a href="@Url.Action("ExportToExcel","HocSinh")" class="btn btn-success" id="export"><i class="fas fa-file-excel"></i> Export</a>
                                    
                            <button type="button" class="btn btn-warning">
                                @Html.ActionLink("Thêm Bản Ghi", "Create", "HocSinh") <i class="btn-icon fas fa-user-plus"></i>
                            </button>
                        </div>
                        

                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Họ và Tên</th>
                                        <th>Giới Tính</th>
                                        <th>Ngày Sinh</th>
                                        <th>Địa Chỉ</th>
                                        <th>SDT</th>
                                        <th>Niên Khóa</th>
                                        <th>Lớp</th>
                                        <th>Chức Năng</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.HoTenHS
                                            </td>
                                            <td>@item.GioiTinh</td>
                                            <td>@item.NgaySinh.Value.ToShortDateString()</td>
                                            <td>
                                                @item.DiaChi
                                            </td>
                                            <td>@item.SDT</td>
                                            <td>@item.NienKhoa</td>
                                            <td>@item.LOP.TenLop</td>
                                            <td>
                                                <i class="fas fa-info-circle"></i> @Html.ActionLink("Xem", "Details", new { id = item.MaHS })|
                                                <i class="far fa-edit"></i> @Html.ActionLink("Sửa", "Edit", new { id = item.MaHS })|
                                                <i class="fas fa-trash-alt"></i> @Html.ActionLink("Xóa", "Delete", new { id = item.MaHS }, new { onclick = "return confirm('Bạn có muốn xóa bản ghi này?');" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Họ và Tên</th>
                                        <th>Giới Tính</th>
                                        <th>Ngày Sinh</th>
                                        <th>Địa Chỉ</th>
                                        <th>SDT</th>
                                        <th>Niên Khóa</th>
                                        <th>Lớp</th>
                                        <th>Chức Năng</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </section>
</div>
<!-- /.row -->





