`@model IEnumerable<coderush.Areas.TTNhom_QLTTHPT.Models.DIEM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}



<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Danh Sách Điểm Đánh Giá Học Lực
        </h1>
        <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> home</a></li>
                <li><a href="#">tables</a></li>
                <li class="active">data tables</li>
            </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <button type="button" class="btn btn-warning" style="float:right ;margin-right: 10px;margin-top: 7px;">
                            @Html.ActionLink("Thêm Bản Ghi", "Create", "Diem")<i class="btn-icon fas fa-user-plus"></i>
                        </button>

                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Điểm TBHK</th>
                                        <th>Điểm TK</th>
                                        <th>Học Kỳ</th>
                                        <th>Hạnh Kiểm</th>
                                        <th>Năm Học</th>
                                        <th>Học Lực</th>
                                        <th>Học Sinh</th>
                                        <th>Chức Năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.DiemTBHK</td>
                                            <td>@item.DiemTK</td>
                                            <td>@item.HocKy</td>
                                            <td>@item.HanhKiem</td>
                                            <td>@item.NamHoc</td>
                                            <td>@item.HocLuc</td>
                                            <td>@item.HOCSINH.HoTenHS</td>
                                            <td>
                                                <i class="fas fa-info-circle"></i> @Html.ActionLink("Xem", "Details", new { id = item.MaDiem }) |
                                                <i class="far fa-edit"></i> @Html.ActionLink("Sửa", "Edit", new { id = item.MaDiem }) |
                                                <i class="fas fa-trash-alt"></i> @Html.ActionLink("Xóa", "Delete", new { id = item.MaDiem }, new { onclick = "return confirm('Bạn có muốn xóa bản ghi này?');" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Điểm TBHK</th>
                                        <th>Điểm TK</th>
                                        <th>Học Kỳ</th>
                                        <th>Hạnh Kiểm</th>
                                        <th>Năm Học</th>
                                        <th>Học Lực</th>
                                        <th>Học Sinh</th>
                                        <th>Chức Năng</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>
        <!-- /.col -->
    </section>
</div>
<!-- /.row -->





